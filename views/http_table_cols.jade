td(style='vertical-align: middle;')
    form(action='/service',method='get')
        input(name='method',type='hidden',value='#{service.method}')
        input(name='path',type='hidden',value='#{service.path}')
        if(service.method == 'GET')
            input.btn.btn-success.btn-block(type='submit',value='#{service.method}')
        else if(service.method == 'POST')
            input.btn.btn-info.btn-block(type='submit',value='#{service.method}')
        else if(service.method == 'PUT')
            input.btn.btn-warning.btn-block(type='submit',value='#{service.method}')
        else if(service.method == 'DELETE')
            input.btn.btn-danger.btn-block(type='submit',value='#{service.method}')
td(style='vertical-align: middle;')
    a(href='http://#{host}#{service.path}') http://#{host}#{service.path}
td(style='vertical-align: middle; text-align:center;') #{service.status}
td
    textarea(style='width: 97%; height: 7em;', disabled) #{service.response}
td(style='vertical-align: middle; text-align:center;') #{service.contentType}